<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>AMW ZOOM</title>
  <link rel="stylesheet" href="style.css" />
  <script src="socket.io.js"></script>
  <script src="jquery.min.js"></script>
  <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <script>
    var ROOM_ID = "<%= userDetails.roomId %>";
    var userName = '<%= userDetails.userName  %>';
    var profile = '<%= userDetails.profileImage  %>';
    // const userId = '<%= userDetails._id  %>';
    // console.log("current userid======", userId);
  </script>
</head>

<body class="card" style="overflow: hidden;">
  <div class="row fixed-top">
    <div class="col-md-12 ">
      <div class="card-header bg-white p-0">
        <div class="logo">
          <div class="text-left">
            <img src="assets/img/brand/AMW_Logo-2.png" class="cursor-pointer">
            <a style="float: right;" class="d-flex" title="Logout"
              href="/users/ApiLogout/<%= userDetails.roomId %>amw-zoom<%= userDetails._id  %>">
              <img src="<%= userDetails.profileImage  %>" class="profile-img cursor-pointer">
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row p-0">
    <div class="col-md-12">
      <div class="main row p-0">
        <div class="main__left p-0">
          <div class="videos__group">
            <div class="row mobScreen p-0">
              <div id="video-grid">
                <div class="col-sm-12 text-white" id="be-loading">
                  Please wait...<img src="assets/img/brand/loader.svg" class="loader-img" alt="Loader">
                </div>

              </div>
            </div>
          </div>
          <div class="options">
            <div class="options__left">
              <div id="stopVideo" class="options__button cursor-pointer">
                <i class="fa fa-video-camera"></i>
              </div>
              <div id="muteButton" class="options__button cursor-pointer">
                <i class="fa fa-microphone"></i>
              </div>
              <div id="showChat" class="options__button cursor-pointer">
                <i class="fa fa-comment"></i>
              </div>
              <div id="screenShare" class="options__button cursor-pointer">
                <i class="fa fa-share-square-o"></i>
              </div>
            </div>
            <div class="options__right">
              <div id="inviteButton" class="options__button cursor-pointer">
                <i class="fas fa-user-plus"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="main__right">
          <div class="text-center aler bg-dark p-0 pt-5 d-flex" id="online-users">
          </div>
          <div class="main__chat_window pt-5">
            <div class="messages pt-5">
            </div>
          </div>
          <div class="main__message_container">
            <div class="header__back options__button cursor-pointer">
              <i class="fas fa-angle-left"></i>
            </div>
            <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
            <div id="send" class="options__button cursor-pointer">
              <i class="fa fa-plus" aria-hidden="true"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
<script src="script.js"></script>


</html>